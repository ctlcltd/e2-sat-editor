# e2-sat-editor-pre-0.3

pkgname=e2-sat-editor
_srcname=e2-sat-editor
pkgdesc='An enigma2 channel list editor'
pkgver=0.3
pkgrel=0
arch=(i686 x86_64)
url='https://github.com/ctlcltd/e2-sat-editor'
license=(GPL3)

depends=(qt6-base curl)
makedepends=(git)
optdepends=(cups)
provides=(e2-sat-editor)
conflicts=(e2-sat-editor)

source=('git+https://github.com/ctlcltd/e2-sat-editor.git')
# source=('git+file://$HOME/build/repo/e2-sat-editor')
sha512sums=('SKIP')

build() {
	cd "$srcdir/$_srcname/src"

	qmake6
	make
}

package() {
	cd "$srcdir/$_srcname/src"

	make INSTALL_ROOT="$pkgdir" install
}

